[include]
    path = ~/.config/git/configs/default.gitconfig

[includeIf "gitdir:~/Dev/foxminded/"]
    path = ~/.config/git/configs/foxminded.gitconfig

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    syntax-theme = Catppuccin-mocha
    features = custom-theme

[delta "custom-theme"]
    # Catppuccin-mocha: surface1 = "#45475a", base = "#1e1e2e"
    line-numbers = true
    side-by-side = false
    file-style = bold "#45475a"
    file-decoration-style = box "#45475a"
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
    hunk-header-style = omit
    line-numbers-left-format = "{nm:>3}│"
    line-numbers-left-style = "#45475a"
    line-numbers-right-format = "{np:>3}│"
    line-numbers-right-style = "#45475a"
    line-numbers-minus-style = red
    line-numbers-plus-style = green
    line-numbers-zero-style = "#45475a"
    minus-style = bold red
    minus-emph-style = bold "#1e1e2e" "#FF5555"
    minus-non-emph-style = bold red
    plus-style = bold green
    plus-emph-style = bold "#1e1e2e" "#50FA7B"
    plus-non-emph-style = syntax
    zero-style = "#45475a"

[include]
    path = ~/.config/git/delta/themes.gitconfig

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
