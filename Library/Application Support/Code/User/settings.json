{
  // ========================================
  //             Window & Layout
  // ========================================
  "window.title": "${rootName}",
  "window.commandCenter": true,
  "workbench.layoutControl.enabled": true,
  "workbench.activityBar.location": "top",

  // ========================================
  //                  Theme
  // ========================================
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",

  // ========================================
  //                 Explorer
  // ========================================
  "workbench.tree.indent": 10,
  "workbench.tree.renderIndentGuides": "onHover",
  // [NOTE]: Prevents automatically revealing files in the explorer, avoiding distractions, especially with packages and libraries.
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ========================================
  //                 Startup
  // ========================================
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  // ========================================
  //                 Settings
  // ========================================
  "workbench.settings.editor": "json",

  // ========================================
  //                  Editor
  // ========================================
  // [NOTE]: If a file is already open in an editor group, reveal it there instead of opening a new tab.
  "workbench.editor.revealIfOpen": true,
  "editor.minimap.enabled": false,
  "editor.padding.top": 8,
  // [NOTE]: Highlights matching brackets only when the cursor is near one, rather than when inside brackets.
  "editor.matchBrackets": "near",
  "editor.bracketPairColorization.enabled": false,
  // [NOTE]: Disables current line highlighting, which can be visually disruptive depending on the theme.
  "editor.renderLineHighlight": "none",
  "editor.roundedSelection": false,
  "editor.dragAndDrop": false,
  "editor.scrollBeyondLastColumn": 8,
  // [NOTE]: Excludes the '-' character from word separators, making it easier to navigate through words.
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.accessibilitySupport": "off",

  // ========================================
  //                   Tabs
  // ========================================
  "workbench.editor.showTabs": "multiple",
  // "workbench.editor.tabSizing": "shrink",
  "workbench.editor.openPositioning": "last",

  // ========================================
  //               Breadcrumbs
  // ========================================
  "breadcrumbs.enabled": true,
  "breadcrumbs.icons": false,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "off",

  // ========================================
  //              Overview Ruler
  // ========================================
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "workbench.colorCustomizations": {
    // [HINT]: Hide other markers in the overview ruler if you don't find them useful.
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000"
  },

  // ========================================
  //               Decorations
  // ========================================
  "explorer.decorations.badges": false,
  "scm.diffDecorations": "gutter",

  // ========================================
  //               Suggestions
  // ========================================
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.wordBasedSuggestions": "off",

  // ========================================
  //                Typography
  // ========================================
  "editor.fontSize": 15,
  "editor.fontFamily": "JetBrains Mono, monospace",
  "debug.console.fontSize": 15,
  "debug.console.fontFamily": "JetBrains Mono, monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font, monospace",

  // ========================================
  //                  Cursor
  // ========================================
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 8,

  // ========================================
  //                  Files
  // ========================================
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    // System files
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // Code editors
    "**/.idea": true,
    // Version control systems
    "**/.git": true,
    // Python caches
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },

  // ========================================
  //                  Search
  // ========================================
  // [NOTE]: Enables case-sensitivity automatically when uppercase letters are used in search queries.
  "search.smartCase": true,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    // Code editors
    "**/.idea": true,
    // Version control systems
    "**/.git": true,
    // Project dependencies
    "**/.venv": true,
    "**/node_modules": true,
    // Python caches
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },

  // ========================================
  //         SCM & Git & Diff Editor
  // ========================================
  // [NOTE]: Displays the changes count badge only for the active repository.
  "scm.countBadge": "focused",
  // [NOTE]: Displays untracked changes separately from other changes to enhance clarity.
  "git.untrackedChanges": "separate",
  // [NOTE]: Hides '+' and '-' indicators in the side-by-side diff view to reduce visual clutter.
  "diffEditor.renderIndicators": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // ========================================
  //                 Debugger
  // ========================================
  "debug.toolBarLocation": "commandCenter",
  "debug.openDebug": "openOnSessionStart",
  "debug.internalConsoleOptions": "openOnSessionStart",
  // [NOTE]: Helps to view the hierarchy of debug sessions.
  "debug.showSubSessionsInToolBar": true,

  // ========================================
  //                 Terminal
  // ========================================
  "terminal.integrated.scrollback": 3000,
  "terminal.integrated.macOptionIsMeta": true,
  // [NOTE]: Keeps right-click behavior standard within the terminal for consistency (without side effects).
  "terminal.integrated.rightClickBehavior": "default",

  // ========================================
  //         Indentation & Formatting
  // ========================================
  // [NOTE]: Sets tab size to 2 spaces, which is common across many languages and file formats.
  "editor.tabSize": 2,
  // [NOTE]: Disables auto-detection to enforce consistent indentation and clearly identify files that don't match my style for informed decisions.
  "editor.detectIndentation": false,
  // [NOTE]: Inserts spaces instead of tabs, which is preferred in most languages and file formats.
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": null,

  // ========================================
  //                 Prettier
  // ========================================
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,

  // ========================================
  //                  Python
  // ========================================
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [88, 120],
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // [HINT]: Disable if the terminal already auto-activates Python virtual environments.
  "python.terminal.activateEnvironment": false,

  // ========================================
  //          Black + Isort + Flake8
  // ========================================
  "isort.args": ["--profile", "black"],
  "flake8.args": ["--max-line-length", "88", "--extend-ignore", "E203,E701"],

  // ========================================
  //                   JSON
  // ========================================
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========================================
  //                   YAML
  // ========================================
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // ========================================
  //                   TOML
  // ========================================
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // ========================================
  //             Even Better TOML
  // ========================================
  "evenBetterToml.formatter.indentString": "  ",
  "evenBetterToml.formatter.reorderArrays": false
}
