[
  // ===== File Creation =====
  {
    "key": "cmd+n",
    // Create a file directly within the explorer.
    "command": "explorer.newFile",
    "when": "!terminalFocus"
  },
  {
    "key": "cmd+n",
    // Remove the default "New Untitled File" binding.
    "command": "-workbench.action.files.newUntitledFile"
  },

  // ===== Navigation =====
  {
    "key": "ctrl+alt+r",
    // Reveal the currently active file in the explorer.
    "command": "workbench.files.action.showActiveFileInExplorer",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+g",
    // Open the SCM panel using the common shortcut pattern for panels (shift+cmd+_).
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "shift+cmd+;",
    // View changes in the diff editor for the currently active file.
    "command": "git.openChange"
  },
  {
    "key": "cmd+;",
    // Open the currently active file from the diff editor.
    "command": "git.openFile"
  },

  // ===== Terminal =====
  {
    "key": "alt+f12",
    // Toggle the integrated terminal (JetBrains-style shortcut).
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "cmd+n",
    // Create a new terminal session when the terminal is focused.
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+w",
    // Kill (close) the current terminal session.
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  }
]
